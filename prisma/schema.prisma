generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./d1.sqlite"
}

model Memo {
  id            String      @id @default(cuid())
  content       String
  tags          Tag[]
  images        String
  link          Link?
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  deleted_at    DateTime?   @map("deleted_at")

  @@map("public_memos")
}

model Link {
  id            String      @id @default(cuid())
  url           String      @map("link")
  text          String?
  memoId        String      @unique @map("memo_id")
  memo          Memo        @relation(fields: [memoId], references: [id])
  createdAt     DateTime    @default(now()) @map("created_at")
  @@map("public_links")
}

model Tag {
  id            String      @id @default(cuid())
  name          String      @unique
  memos         Memo[]     
  createdAt     DateTime    @default(now()) @map("created_at")

  @@map("public_tags")
}
